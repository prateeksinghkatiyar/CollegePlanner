<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:cardBackgroundColor="@color/white"
    android:padding="5dp"
    app:contentPadding="2dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatarIv3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/holder" />

    <TextView
        android:id="@+id/nameTv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/avatarIv3"
        android:text="user_name"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timeTv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTv3"
        android:layout_toEndOf="@id/avatarIv3"
        android:text="Actual Comment time"
        android:textColor="@color/lightGrey"
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/commentTv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeTv3"
        android:layout_toEndOf="@id/avatarIv3"
        android:text="Actual Comment"
        android:textColor="@color/black"
        android:textSize="14sp" />


</RelativeLayout>
